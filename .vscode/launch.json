{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "PATH": "${env:PATH}",
                "HOME": "${env:HOME}",
                "AZURE_CONFIG_DIR": "${env:HOME}/.azure"
            }
        }
    ]
}
